{
  "extends": ["next", "next/core-web-vitals", "prettier", "eslint:recommended"],
  "ignorePatterns": ["!**/*", ".next/**/*"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "react/display-name": ["warn"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "extensions": [".js", ".jsx"],
        "map": [
          ["@", "./components/"],
          ["@", "./layouts/"],
          ["@", "./public/"],
          ["@", "./styles/"],
          ["@", "./utils/"],
          ["@", "./pages/"]
        ]
      }
    }
  }
}
